<LinearLayout 
	    xmlns:android="http://schemas.android.com/apk/res/android" 
	    android:id="@+id/setting_unfold_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone"
		android:focusable="false"
		android:clickable="false"
		android:orientation="vertical">
		
    	<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="31px"
			android:layout_marginLeft="3px"
			android:orientation="horizontal"
			android:focusable="false"
			android:clickable="false">
			
    	    <ImageView 
			    android:id="@+id/setting_base"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2px"
				android:focusable="true"
				android:clickable="true"
				android:onClick="onClick_Event"
				android:scaleType="matrix"
		    />	
		    
      		<ImageView 
			    android:id="@+id/setting_display"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="4px"
				android:focusable="true"
				android:clickable="true"
				android:onClick="onClick_Event"
				android:scaleType="matrix"
		    />
      	
      		<ImageView 
			    android:id="@+id/setting_net"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="4px"
				android:focusable="true"
				android:clickable="true"
				android:onClick="onClick_Event"
				android:scaleType="matrix"
		    />
      	
    	    </LinearLayout>
      		    
	   	<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="3px"
			android:layout_marginLeft="3px"
			android:orientation="horizontal"
			android:focusable="false"
			android:clickable="false">
		

	   	   	<ImageView 
			    android:id="@+id/setting_update"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="2px"
				android:focusable="true"
				android:clickable="true"
				android:onClick="onClick_Event"
				android:scaleType="fitStart"
		    />
	   	   	
	   	   	<ImageView 
			    android:id="@+id/setting_more"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="4px"
				android:focusable="true"
				android:clickable="true"
				android:onClick="onClick_Event"
				android:scaleType="matrix"
		    />
	   	   	
	   	   	<ImageView 
			    android:id="@+id/setting_erwei"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="4px"
				android:focusable="true"
				android:clickable="true"
				android:onClick="onClick_Event"
				android:scaleType="matrix"
		    />
		
   		 </LinearLayout>	 
		
    </LinearLayout>	 