<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:paddingTop="159px"
	android:paddingLeft="100px"

    >
    
        <LinearLayout 

			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
		      >
    
            <ImageView 
		    android:id="@+id/channel"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone"
		    /> 

           
       	     <ImageView 
		    android:id="@+id/channel_unfold"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:scaleType="matrix"
			android:focusable="true"
			android:clickable="true"
			android:layout_marginTop="36px"
			android:onClick="onClick_Event"
			android:visibility="gone"
		    /> 

		
       	    <ImageView 
		    android:id="@+id/vod"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="2px"
		    />  
		    
       	    <ImageView 
		    android:id="@+id/vod_unfold"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="2px"
			android:layout_marginTop="36px"
			android:focusable="true"
			android:clickable="true"
			android:onClick="onClick_Event"
			android:visibility="gone"
			android:scaleType="matrix"
			
		    />  

           <ImageView 
		    android:id="@+id/favorite"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="2px"
		    />   
		    
            <include 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    layout="@layout/favoritemenu_layout" />  
		    
                <ImageView 
		    android:id="@+id/application"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="2px"
		    /> 
		    
           <include 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    layout="@layout/appmenu_layout" />
		    
           
           <ImageView 
		    android:id="@+id/setting"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="2px"
		    />
		  
		     
		   <include 
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    layout="@layout/setting_layout" />
		    
		   <!-- 
           <ImageView 
		    android:id="@+id/setting_unfold"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="2px"
			android:layout_marginTop="36px"
			android:focusable="true"
			android:clickable="true"
			android:onClick="onClick_Event"
			android:visibility="gone"
			android:scaleType="matrix"
			
		    />  
		     -->
		    	         		               
	    </LinearLayout>  
    
 </FrameLayout>		   